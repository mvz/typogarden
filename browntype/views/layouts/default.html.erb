<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <%= render 'shared/page_header' %>
    <title><%=h page_title %></title>
    <%= stylesheet_link_tag "/stylesheets/theme/local", :media => 'all'  %>
    <%= stylesheet_link_tag "/stylesheets/theme/citrus", :media => 'all'  %>
    <%= javascript_include_tag "/javascript/theme/sifr" %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1><%= link_to this_blog.blog_name, this_blog.base_url %></h1>
        <h2 id="subtitle"> <%= link_to this_blog.blog_subtitle, this_blog.base_url %></h2>
      </div>      
      <div id="sidebar">
        <%= render_sidebars %>
      </div>
      <div id="content">
        <%= yield %>
        <%= javascript_tag "show_dates_as_local_time()" %>
      </div>  
    </div>
  </body>
</html>
